{>"layouts/master" /}

{<body}
<h3>Mombasa Hotels in Kenya</h3>
{#mombasahotels}
<div class="large-3 columns book">
      <img src="/img/{.cover}">
      <h4>{.hotelname}</h4>
      <p>{.description}</p>
      <p>{.hotelrating}</p>
      <div class="price">Special Hotel Booking per night at <span>${.price}</span></div>
      <br>
      <a href="/hotel/mombasahotels/details/{._id}" class="button small">Hotel Details</a>
    </div>
{/mombasahotels}
{/body}